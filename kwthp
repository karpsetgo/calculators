        box-sizing: border-box;
      }
      body {
        text-align: center;
        background: #f5f5f5;
        font-family: Arial, Helvetica, sans-serif;
      }
      h1 {
        text-align: center;
      }
      #result {
        position: center;
        display: none;
        font-weight: bold;
        padding: 11px;
        margin-bottom: 100px;
        font-size: 18px;
        text-align: center;
        border-radius: 5px;
        width: 265px;
        border-radius: 5px;
        background-color: white;
        border: 2px solid rgb(255, 0, 119);
      }
      .box {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        flex-direction: column;
      }
      label {
        color: rgb(40, 89, 214);
        margin-bottom: 30px;
      }
      .head {
        display: block;
        margin-bottom: 100px;
        padding: 10px;
        width: 100vw;
        height: 10vh;
        background-color: #2e1181;
      }
      input {
        appearance: none;
        border: none;
        outline: none;
        display: block;
        color: black;
        padding: 10px;
        background-color: white;
        border-radius: 6px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
